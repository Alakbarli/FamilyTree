
@{
    ViewData["Title"] = "Confirm invate";
}
@model GtsTask3Famly.ViewModel.ConfirmInvateVM
<div class="row justify-content-center">
    <div class="col-5">
        <p>Set yourself a password to continue</p>
        <form method="post" class="px-4 py-3">
            <input asp-for="@Model.Id"  type="hidden"/>
            <input asp-for="@Model.Token"  type="hidden"/>
            <input asp-for="@Model.FamilyId"  type="hidden"/>
            <input  type="hidden"/>
            <div class="form-group">
                <label asp-for="Password">New password</label>
                <input class="form-control" asp-for="Password" placeholder="new password">

            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword">Confirm password</label>
                <input class="form-control" asp-for="ConfirmPassword" placeholder="Re-enter the password">

            </div>

            <div class="text-danger" asp-validation-summary="All"></div>
            <button type="submit" class="btn btn-primary">Set password and login</button>
        </form>
        <div class="dropdown-divider"></div>
    </div>
</div>



